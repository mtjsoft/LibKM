<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/hh_fi_wr"
    android:background="@drawable/shape_ll_code_tip"
    android:orientation="vertical">

    <EditText
        android:id="@+id/tv_dialog_msg"
        style="@style/hh_fi_wr"
        android:layout_height="100dp"
        android:layout_margin="8dp"
        android:background="@drawable/shape_et"
        android:gravity="start"
        android:hint="请输入内容"
        android:padding="3dp"
        android:textColor="@color/black_text"
        android:textSize="14sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/check_code_line" />

    <LinearLayout
        style="@style/hh_fi_wr"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_dialog_cancel"
            style="@style/weight_width_wr"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_tv_dialog_left_click"
            android:gravity="center"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:text="@string/cancel"
            android:textColor="@color/black_text"
            android:textSize="16sp" />

        <View
            android:id="@+id/view"
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="@color/check_code_line" />

        <TextView
            android:id="@+id/tv_dialog_sure"
            style="@style/weight_width_wr"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_tv_dialog_right_click"
            android:gravity="center"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:text="@string/sure"
            android:textColor="@color/black_text"
            android:textSize="16sp" />
    </LinearLayout>

</LinearLayout>