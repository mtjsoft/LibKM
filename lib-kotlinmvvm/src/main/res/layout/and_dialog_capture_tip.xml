<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/hh_fi_wr"
    android:background="@drawable/shape_ll_code_tip"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_dialog_title"
        style="@style/hh_wr_wr"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="15dp"
        android:text="@string/tip"
        android:textColor="@color/black_text"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tv_dialog_msg"
        style="@style/hh_fi_wr"
        android:layout_marginBottom="30dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:gravity="center_horizontal"
        android:textColor="@color/black_text"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tv_dialog_msg_height"
        style="@style/hh_fi_wr"
        android:layout_marginBottom="30dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:minHeight="100dp"
        android:textColor="@color/black_text"
        android:textSize="16sp"
        android:visibility="gone" />

    <View
        android:id="@+id/line_h"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/check_code_line" />

    <LinearLayout
        style="@style/hh_fi_wr"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_dialog_cancel"
            style="@style/weight_width_wr"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_tv_dialog_left_click"
            android:gravity="center"
            android:paddingBottom="15dp"
            android:paddingTop="15dp"
            android:text="@string/cancel"
            android:textColor="@color/black_text"
            android:textSize="18sp" />

        <View
            android:id="@+id/view"
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="@color/check_code_line" />

        <TextView
            android:id="@+id/tv_dialog_sure"
            style="@style/weight_width_wr"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_tv_dialog_right_click"
            android:gravity="center"
            android:paddingBottom="15dp"
            android:paddingTop="15dp"
            android:text="@string/sure"
            android:textColor="@color/black_text"
            android:textSize="18sp" />
    </LinearLayout>

</LinearLayout>