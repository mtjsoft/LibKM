        <item name="android:textSize">12sp</item>
    </style>

    <style name="text_gray_12_w_w" parent="@style/hh_wr_wr">
        <item name="android:textColor">@color/gray_text</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="text_gray_12_w_w_w" parent="@style/weight_width_wr">
        <item name="android:textColor">@color/gray_text</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="text_black_12_w_w" parent="@style/text_black_14_w_w">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="text_white_12_w_w" parent="@style/text_black_12_w_w">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="text_white_14_w_w" parent="@style/text_white_12_w_w">
