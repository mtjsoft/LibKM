<resources>
    <style name="hh_wr_wr">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="hh_fi_fi">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="hh_fi_wr">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>


    <style name="hh_wr_fi">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="weight_width_wr">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
    </style>

    <!-- Application theme. -->
    <style name="HHBaseStyle" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/main_base_color</item>
        <item name="colorAccent">@color/main_base_color</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="CustomDialog" parent="Theme.AppCompat.Dialog">
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <!-- Base application theme. -->
    <style name="BaseAppTheme" parent="@style/HHBaseStyle">
        <item name="colorPrimary">@color/main_base_color</item>
        <item name="colorAccent">@color/main_base_color</item>
        <item name="colorPrimaryDark">@color/main_base_color</item>
    </style>

    <!-- ToolBar样式 .-->
    <style name="toolbar_theme" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:textSize">20sp</item> <!--  字体大小-->
    </style>
    <!-- ToolBar菜单样式.-->
    <style name="popup_theme" parent="@style/ThemeOverlay.AppCompat.Light">
        <item name="android:background">@android:color/white</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="hh_dialog_style" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.6</item>
    </style>

    <!-- 提示框开始 -->
    <style name="huahan_dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@drawable/hh_shape_custom_dialog_bg</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.6</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
    </style>

    <style name="hh_listview" parent="@style/hh_fi_fi">
        <item name="android:listSelector">@color/transparent</item>
        <item name="android:fadingEdge">none</item>
        <item name="android:fadingEdgeLength">0dp</item>
        <item name="android:scrollbars">none</item>
        <item name="android:dividerHeight">1dp</item>
        <item name="android:cacheColorHint">@color/transparent</item>
        <item name="android:divider">@color/background</item>
        <item name="android:background">@color/background</item>
    </style>

    <style name="text_black_16_w_w_w">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black_text</item>
    </style>

    <style name="text_black_14_w_w_w" parent="text_black_16_w_w_w">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="text_black_12_w_w_w" parent="text_black_16_w_w_w">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="text_black_16_f_w" parent="@style/hh_fi_wr">
        <item name="android:textSize">16sp</item>
